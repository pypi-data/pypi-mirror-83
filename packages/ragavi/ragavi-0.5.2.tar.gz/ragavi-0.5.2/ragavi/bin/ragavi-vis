#!/usr/bin/env python3.6

from ragavi.arguments import vis_argparser


def catch_empty(options):
    """Force all empty strings to None"""
    for key, value in options.__dict__.items():
        if value in ["", " "]:
            options.__dict__[key] = None
    return options


parser = vis_argparser()
options = parser.parse_args()
options = catch_empty(options)

if __name__ == "__main__":

    from ragavi.visibilities import main
    main(options=options)
