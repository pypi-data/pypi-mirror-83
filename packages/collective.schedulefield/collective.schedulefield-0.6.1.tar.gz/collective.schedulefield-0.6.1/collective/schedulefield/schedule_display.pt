<html xmlns="http://www.w3.org/1999/xhtml"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      tal:omit-tag=""
      i18n:domain="collective.schedulefield">
  <div id="" tal:attributes="id view/id">
  <tal:for repeat="day view/days">
    <tal:block define="key python:day[0];
                       name python:day[1]"
               condition="python:view.must_show_day(key)">
      <div class=""
           tal:attributes="class string:${view/klass}-day ${view/klass}-${key}">
        <div class="title" tal:content="name"></div>
      <tal:for repeat="day_section view/day_sections">
        <div class=""
              tal:attributes="class string:${day_section};
                              style view/style;
                              title view/title;
                              lang view/lang;
                              onclick view/onclick;
                              ondblclick view/ondblclick;
                              onmousedown view/onmousedown;
                              onmouseup view/onmouseup;
                              onmouseover view/onmouseover;
                              onmousemove view/onmousemove;
                              onmouseout view/onmouseout;
                              onkeypress view/onkeypress;
                              onkeydown view/onkeydown;
                              onkeyup view/onkeyup">
           <tal:block condition="view/value"
                      content="python:view.get_hour_value(key, day_section)" />

        </div>
      </tal:for>
      <div class="comment"
            tal:condition="python:view.get_comment(key)"
            tal:attributes="style view/style;
                            title view/title;
                            lang view/lang;
                            onclick view/onclick;
                            ondblclick view/ondblclick;
                            onmousedown view/onmousedown;
                            onmouseup view/onmouseup;
                            onmouseover view/onmouseover;
                            onmousemove view/onmousemove;
                            onmouseout view/onmouseout;
                            onkeypress view/onkeypress;
                            onkeydown view/onkeydown;
                            onkeyup view/onkeyup">
          <tal:block content="python:view.get_comment(key)" />
      </div>
      </div>
    </tal:block>
  </tal:for>
  </div>
</html>
