import argparse
import asyncio
import logging

import remt
from remt.cmd import remt_ctx

logging.basicConfig(level=logging.INFO)

async def sync_meta(output: str):
    async with remt_ctx(output) as ctx:
        pass

parser = argparse.ArgumentParser(description="""\
Synchronize metadata from reMarkable tablet into a directory.
""")

parser.add_argument('output', help='output directory for metadata')

args = parser.parse_args()

asyncio.run(sync_meta(args.output))

