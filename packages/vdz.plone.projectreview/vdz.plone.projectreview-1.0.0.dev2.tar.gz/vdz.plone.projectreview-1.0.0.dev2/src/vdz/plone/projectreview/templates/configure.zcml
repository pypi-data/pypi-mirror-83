    <!-- [ macro sources (unrestricted; mock data only) ... [ -->
    <browser:page
             for="*"
             name="pr_toolbox"
             template="pr_toolbox.pt"
             permission="zope2.View"
             class="vdz.plone.projectreview.browser.Browser"
             />

    <!-- due to differences in the templating engine
         (Chameleon, z3c.pt, ...),
         our Plone 4 versions of the pr_master* views currently don't work
         with Plone 5; thus, we provide special versions
         (which don't work yet, but can do so one happy day).
         Please keep the different entities in synch, i.e.:
         maintain "diffability", as long as different files are necessary.
     -->
    <browser:page
             for="*"
             name="pr_master"
             template="pr_master.pt"
             zcml:condition="not-have plone-5" 
             permission="zope2.View"
             class="vdz.plone.projectreview.browser.Browser"
    /><browser:page
             for="*"
             name="pr_master"
             template="pr_master-p5.pt"
             zcml:condition="have plone-5" 
             permission="zope2.View"
             class="vdz.plone.projectreview.browser.Browser"
             />

    <browser:page
             for="*"
             name="pr_master2"
             template="pr_master2.pt"
             zcml:condition="not-have plone-5" 
             permission="zope2.View"
             class="vdz.plone.projectreview.browser.Browser"
    /><browser:page
             for="*"
             name="pr_master2"
             template="pr_master2-p5.pt"
             zcml:condition="have plone-5" 
             permission="zope2.View"
             class="vdz.plone.projectreview.browser.Browser"
             />
    <!-- ] ... macro sources (unrestricted; mock data only) ] -->

</configure>
