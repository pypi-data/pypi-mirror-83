#! /usr/bin/env python
# Uses ROS param parser to pull in injection from XML and event id, then print parameters.  Currently used to popuate mass1, mass2, event time

import RIFT.misc.ourparams as ourparams
import RIFT.lalsimutils as lalsimutils
import numpy as np
import sys
opts,  rosDebugMessagesDictionary = ourparams.ParseStandardArguments()

Psig = ourparams.PopulatePrototypeSignal(opts)

if (opts.indicate_mass1):
   print Psig.m1/lalsimutils.lsu_MSUN
   sys.exit(0)
if (opts.indicate_mass2):
   print Psig.m2/lalsimutils.lsu_MSUN
   sys.exit(0)
if (opts.signal_tref):
   print float(Psig.tref)
   sys.exit(0)
