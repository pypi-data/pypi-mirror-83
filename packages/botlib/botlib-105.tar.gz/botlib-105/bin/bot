#!/usr/bin/python3

from ol.spc import Console, boot, cmd, execute, ol, os, scandir

def main():
    k = boot("bot")
    if "b" in k.cfg.opts:
        print("BOT started at %s" % time.ctime(time.time()))
        print(ol.format(k.cfg))
    scandir(k.cfg.wd)
    k.walk("bot,botmod")
    if k.cfg.txt:
        return cmd(k.cfg.otxt)
    k.start()
    k.init(k.cfg.mods)
    if "s" in k.cfg.opts or k.cfg.mods:
        c = Console()
        c.start()
    if "s" in k.cfg.opts or "d" in k.cfg.opts or k.cfg.mods:
        k.wait()
         
execute(main)
os._exit(0)
