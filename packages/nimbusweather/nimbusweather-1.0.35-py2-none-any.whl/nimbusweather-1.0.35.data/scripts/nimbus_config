"""Configure the configuration file."""
from __future__ import with_statement

import logging
import optparse
import sys

from nimbuscfg.config import ConfigEngine

usage = """Usage: nimbus_config --help
       nimbus_config [--debian]
"""


def main():

    # Create a command line parser:
    parser = optparse.OptionParser(usage=usage)

    parser.add_option("--debian", action="store_true", help="Configure for debian startup")

    (options, args) = parser.parse_args()

    logging.basicConfig(level=logging.INFO, format='%(message)s')

    config_mgr = ConfigEngine()

    config_mgr.run(options)

    sys.exit(0)


if __name__ == "__main__":
    main()
