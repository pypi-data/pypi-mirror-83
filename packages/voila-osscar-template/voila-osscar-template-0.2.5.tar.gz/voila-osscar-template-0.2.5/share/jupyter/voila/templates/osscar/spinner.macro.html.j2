{% macro css() %}
  <!-- materialscloud loading animation -->
  <style>
    #loading {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 75vh;
        font-family: sans-serif;
    }
  </style>
{% endmacro %}

{% macro html() %}
  <div id="loading">
    <img style="width: 150px; text-align: center;" src="/voila/static/gears.svg"/>
    <h2 id="loading_text">Running {{nb_title}}...</h2>
    This page should redirect you. If it doesn't, <a href="{{ open_url }}">click here</a>.
  </div>
{% endmacro %}
