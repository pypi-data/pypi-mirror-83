# see http://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.{yaml,yml}]
indent_size = 2

[*.{bat,cmd,ps1}]
end_of_line = crlf

[*.py]
max_line_length = 119

[docs/**.rst]
max_line_length = 119
