<?xml version="1.0"?>
<object name="config"
        meta_type="Dexterity Container"
        xmlns:i18n="http://xml.zope.org/namespaces/i18n"
        i18n:domain="cpskin.citizen">
 <criteria>

  <!-- default widgets -->
  <criterion name="c0">
   <property name="widget">sorting</property>
   <property name="title">Sort on</property>
   <property name="position">right</property>
   <property name="section">default</property>
   <property name="hidden">1</property>
   <property name="vocabulary"></property>
   <property name="default"></property>
  </criterion>

  <criterion name="c1" i18n:attributes="title">
   <property name="widget">text</property>
   <property name="title">Search</property>
   <property name="position">top</property>
   <property name="section">default</property>
   <property name="hidden">0</property>
   <property name="index">SearchableText</property>
   <property name="default"/>
   <property name="onlyallelements">1</property>
   <property name="wildcard">1</property>
  </criterion>

  <criterion name="c2" i18n:attributes="title">
   <property name="widget">resultsperpage</property>
   <property name="title">Per page</property>
   <property name="position">right</property>
   <property name="section">default</property>
   <property name="hidden">1</property>
   <property name="start">20</property>
   <property name="end">1000</property>
   <property name="step">20</property>
   <property name="default">20</property>
  </criterion>

  <criterion name="c3" i18n:attributes="title">
   <property name="widget">select</property>
   <property name="title">Type</property>
   <property name="position">top</property>
   <property name="section">default</property>
   <property name="hidden">0</property>
   <property name="count">1</property>
   <property name="sortcountable">0</property>
   <property name="hidezerocount">1</property>
   <property name="index">portal_type</property>
   <property name="vocabulary">plone.app.vocabularies.PortalTypes</property>
   <property name="catalog"></property>
   <property name="sortreversed">0</property>
   <property name="default"></property>
  </criterion>

  <criterion name="c4" i18n:attributes="title">
   <property name="widget">radio</property>
   <property name="title">Action</property>
   <property name="position">top</property>
   <property name="section">default</property>
   <property name="hidden">0</property>
   <property name="count">1</property>
   <property name="sortcountable">0</property>
   <property name="hidezerocount">1</property>
   <property name="index">citizen_action</property>
   <property name="vocabulary">cpskin.citizen.actions</property>
   <property name="catalog"></property>
   <property name="hidealloption">0</property>
   <property name="maxitems"></property>
   <property name="sortreversed">0</property>
   <property name="default">awaiting-for-approval</property>
  </criterion>

 </criteria>
</object>
