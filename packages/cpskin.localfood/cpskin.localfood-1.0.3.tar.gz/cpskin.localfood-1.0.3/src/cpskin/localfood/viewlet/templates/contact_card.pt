<html xmlns="http://www.w3.org/1999/xhtml"
	    xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
	    xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      i18n:domain="cpskin.localfood" lang="en">

  <div class="viewlet-contact-card"
       tal:condition="view/can_view">
    <div class="card-index columns-1">
      <ol class="columns-3">
        <li tal:repeat="widget view/widgets">
          <span tal:content="widget/label"></span>
          <span tal:content="widget/value" class="detail"></span>
        </li>
      </ol>
    </div>
  </div>

</html>
